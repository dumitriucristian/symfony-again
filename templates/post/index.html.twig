{% extends 'base.html.twig' %}

{%  block body %}
    <div class="content">
        <h2>List of all posts</h2>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped">
            <thead>
            <tr>
                <td>ID</td>
                <td>TITLE</td>
                <td>ACTIONS</td>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>
                        {{ post.id }}
                    </td>
                    <td>
                        <a href="{{ path('postshow', {id: post.id}) }}">{{ post.title }}</a>
                    </td>
                    <td>
                        <a href="{{ path('postdelete', {id: post.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{%  endblock %}
